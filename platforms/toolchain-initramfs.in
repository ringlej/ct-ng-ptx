## SECTION=architecture_options

menu "toolchain initramfs           "

menuconfig CT_NG
	prompt "crosstool-ng                  "
	bool
    select HOST_CT_NG
	help
	  The crosstool-ng toolchain generator.

if CT_NG

config HOST_CT_NG
	bool
    default y if CT_NG

config HOST_CT_NG_VERSION
	prompt "ct-ng version"
	string
	default "1.6.0"

config HOST_CT_NG_CONFIG
	prompt "config file"
	string
	default "ct-ng.config"
	help
	  This entry specifies the .config file used to compile
	  barebox.

config HOST_CT_NG_ARCH_STRING
	string
	default "arm"			if ARCH_ARM
	default "blackfin"		if ARCH_BLACKFIN
	default "ppc"			if ARCH_PPC

endif

config CROSSCHAIN_INITRAMFS_VENDOR
	string
	prompt "check for specific toolchain vendor"
	default "crosstool-ng-${PTXCONF_HOST_CT_NG_VERSION}" if HOST_CT_NG
    default "OSELAS.Toolchain-1.99.3" if !HOST_CT_NG
	help
	  Add here an unique vendor string to ensure this project will
	  be build with the correct toolchain.
	  Leave this entry empty to omit this check.
	  To use this feature add a file called 'ptxconfig' to the bin/ folder of
	  your toolchain. This file should contain at least one variable definition:
	  PTXCONF_PROJECT="insert-vendor-string-here"
	  The string defined here will be checked against the string defined in
	  PTXCONF_PROJECT in file 'ptxconfig' from the toolchain.

config CROSSCHAIN_INITRAMFS_CHECK
	string
	prompt "check for specific gcc version"
	default "4.4.3"
	help
	  PTXdist calls your cross compiler with -dumpversion and
	  compares the output with this string. This should help
	  to avoid compilation with the wrong compiler version
	  when you use your own external toolchain.

config UCLIBC_VERSION
	string
	prompt "check for specific uclibc version"
	default "0.9.30.2"
	help
	  Specify the uclibc version this BSP's initramfs shall be built with. This information
          is used to guess the toolchain path if you use "ptxdist toolchain-initramfs"
	  without an argument.

config GNU_TARGET_INITRAMFS
	string
	prompt "gnu target"
	help
	  Defines the GNU target for your cross build.

config COMPILER_PREFIX_INITRAMFS
	string
	prompt "compiler prefix"
	default "${PTXCONF_GNU_TARGET_INITRAMFS}-"
	help
	  This is the prefix used to create the correct cross compiler
	  name. If the prefix is equal to the GNU Target you can use
	  "${PTXCONF_GNU_TARGET_INITRAMFS}-" to use it.

endmenu
